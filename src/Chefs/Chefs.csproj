<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">$(TargetFrameworks);net6.0-windows10.0.18362</TargetFrameworks>
		<TargetFrameworks>$(TargetFrameworks);net6.0</TargetFrameworks>
		<TargetFrameworks Condition="'$(DisableNet6MobileTargets)'==''">$(TargetFrameworks);net6.0-ios;net6.0-maccatalyst;net6.0-android</TargetFrameworks>
		<!-- Ensures the .xr.xml files are generated in a proper layout folder -->
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
	</PropertyGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='net6.0-windows10.0.18362'">
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.2.230118.102" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.22621.28" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.22621.28" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'!='net6.0-windows10.0.18362'">
		<Content Include="Assets\**" />
		<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
		<Compile Update="**\*.xaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Uno.WinUI" Version="4.9.0-dev.357" />
	</ItemGroup>
	<ItemGroup>
	  <PackageReference Include="Uno.Extensions.Configuration" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Core" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Hosting" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Hosting.WinUI" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Http" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Http.Refit" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Localization.WinUI" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Logging.Serilog" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Logging.WinUI" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Navigation" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Navigation.Toolkit.WinUI" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Navigation.WinUI" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Reactive" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Reactive.Messaging" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Reactive.WinUI" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Serialization" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Serialization.Http" Version="2.3.10" />
	  <PackageReference Include="Uno.Extensions.Serialization.Refit" Version="2.3.10" />
	</ItemGroup>
</Project>