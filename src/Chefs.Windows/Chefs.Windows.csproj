<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows10.0.18362</TargetFramework>
		<TargetPlatformMinVersion>10.0.18362.0</TargetPlatformMinVersion>
		<RootNamespace>Chefs</RootNamespace>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<Platforms>x86;x64;arm64</Platforms>
		<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
		<PublishProfile>win10-$(Platform).pubxml</PublishProfile>
		<UseWinUI>true</UseWinUI>
		<EnableMsixTooling>true</EnableMsixTooling>
	</PropertyGroup>
	
	<PropertyGroup>
		<DefineConstants>$(DefineConstants);WINDOWS_WINUI</DefineConstants>
		<DefaultLanguage>en</DefaultLanguage>
	</PropertyGroup>

	<PropertyGroup Condition="'$(CI)'!='' or '$(TF_BUILD)'!=''">
		<RuntimeIdentifier>win10-x64</RuntimeIdentifier>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Images\AppIcon.scale-100.png" />
	  <None Remove="Images\AppIcon.scale-200.png" />
	  <None Remove="Images\AppIcon.scale-400.png" />
	  <None Remove="Images\BadgeLogo.scale-100.png" />
	  <None Remove="Images\BadgeLogo.scale-200.png" />
	  <None Remove="Images\BadgeLogo.scale-400.png" />
	  <None Remove="Images\LargeTile.scale-100.png" />
	  <None Remove="Images\LargeTile.scale-125.png" />
	  <None Remove="Images\LargeTile.scale-150.png" />
	  <None Remove="Images\LargeTile.scale-200.png" />
	  <None Remove="Images\LargeTile.scale-400.png" />
	  <None Remove="Images\MediumTile.scale-100.png" />
	  <None Remove="Images\MediumTile.scale-200.png" />
	  <None Remove="Images\MediumTile.scale-400.png" />
	  <None Remove="Images\SmallTile.scale-100.png" />
	  <None Remove="Images\SmallTile.scale-200.png" />
	  <None Remove="Images\SmallTile.scale-400.png" />
	  <None Remove="Images\SplashScreen.scale-100.png" />
	  <None Remove="Images\SplashScreen.scale-125.png" />
	  <None Remove="Images\SplashScreen.scale-150.png" />
	  <None Remove="Images\SplashScreen.scale-200.png" />
	  <None Remove="Images\SplashScreen.scale-400.png" />
	  <None Remove="Images\StoreLogo.scale-100.png" />
	  <None Remove="Images\StoreLogo.scale-200.png" />
	  <None Remove="Images\StoreLogo.scale-400.png" />
	  <None Remove="Images\Wide310x150Logo.scale-125.png" />
	  <None Remove="Images\Wide310x150Logo.scale-150.png" />
	  <None Remove="Images\WideTile.scale-100.png" />
	  <None Remove="Images\WideTile.scale-200.png" />
	  <None Remove="Images\WideTile.scale-400.png" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="Images\AppIcon.scale-100.png" />
	  <Content Include="Images\AppIcon.scale-200.png" />
	  <Content Include="Images\AppIcon.scale-400.png" />
	  <Content Include="Images\BadgeLogo.scale-100.png" />
	  <Content Include="Images\BadgeLogo.scale-200.png" />
	  <Content Include="Images\BadgeLogo.scale-400.png" />
	  <Content Include="Images\LargeTile.scale-100.png" />
	  <Content Include="Images\LargeTile.scale-200.png" />
	  <Content Include="Images\LargeTile.scale-400.png" />
	  <Content Include="Images\MediumTile.scale-100.png" />
	  <Content Include="Images\MediumTile.scale-200.png" />
	  <Content Include="Images\MediumTile.scale-400.png" />
	  <Content Include="Images\SmallTile.scale-100.png" />
	  <Content Include="Images\SmallTile.scale-200.png" />
	  <Content Include="Images\SmallTile.scale-400.png" />
	  <Content Include="Images\SplashScreen.scale-100.png" />
	  <Content Include="Images\SplashScreen.scale-200.png" />
	  <Content Include="Images\SplashScreen.scale-400.png" />
