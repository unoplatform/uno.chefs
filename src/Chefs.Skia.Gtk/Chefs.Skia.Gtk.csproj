<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType Condition="'$(Configuration)'=='Release'">WinExe</OutputType>
		<OutputType Condition="'$(Configuration)'=='Debug'">Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<DefineConstants>$(DefinedConstants);WINUI</DefineConstants>
	</PropertyGroup>
	<ItemGroup Condition="exists('..\Chefs.Windows')">
		<EmbeddedResource Include="..\Chefs.Windows\Package.appxmanifest" LogicalName="Package.appxmanifest" />
		<Content Include="..\Chefs.Windows\Images\StoreLogo.png" Link="Assets\StoreLogo.png" />
	</ItemGroup>
	<ItemGroup>
		<UpToDateCheckInput Include="..\Chefs.UI\**\*.xaml" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="Assets\Fonts\uno-fluentui-assets.ttf" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Uno.CommunityToolkit.WinUI.UI.Controls" Version="7.1.100" />
		<PackageReference Include="Uno.UI.RuntimeTests.Engine" Version="0.14.0-dev.54" />
		<PackageReference Include="Uno.WinUI.Skia.Gtk" Version="4.9.0-dev.357" />
		<PackageReference Include="Uno.WinUI.RemoteControl" Version="4.9.0-dev.357" Condition="'$(Configuration)'=='Debug'" />
		<PackageReference Include="SkiaSharp.Views.Uno.WinUI" Version="2.88.1-preview.79" />
		<PackageReference Include="SkiaSharp.Skottie" Version="2.88.3" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\Chefs\Chefs.csproj" />
	</ItemGroup>
	<Import Project="..\Chefs.UI\Chefs.UI.projitems" Label="Shared" />
	<ItemGroup>
	  <PackageReference Include="Uno.Extensions.Configuration" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Core" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Hosting" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Hosting.WinUI" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Http" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Http.Refit" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Localization.WinUI" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Logging.Serilog" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Logging.WinUI" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Navigation" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Navigation.Toolkit.WinUI" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Navigation.WinUI" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Reactive" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Reactive.Messaging" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Reactive.WinUI" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Serialization" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Serialization.Http" Version="2.3.6" />
	  <PackageReference Include="Uno.Extensions.Serialization.Refit" Version="2.3.6" />
	</ItemGroup>
</Project>
