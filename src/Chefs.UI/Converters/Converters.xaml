<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Chefs.Converters">
    
    <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
    <converters:EnumBooleanConverter x:Key="EnumBooleanConverter" />
    <converters:BoolToIntConverter x:Key="BoolToIntConverter" />
    <converters:StringFormatter x:Key="StringFormatter" />
    <converters:StringSeparatorConverter x:Key="DotStringSeparator"
                                        Separator=" ∙ "/>
    <converters:CustomBoolToColorConverter x:Key="CustomColor"
                                            TrueColorValue="{StaticResource SurfaceBrush}"
                                            FalseColorValue="{StaticResource PrimaryBrush}" />
    <converters:CustomBoolToColorConverter x:Key="FilterButtonBackgroundColor"
                                            TrueColorValue="{StaticResource PrimaryBrush}"
                                            FalseColorValue="{StaticResource SurfaceBrush}" />
    <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
    <converters:BoolInverter x:Key="InvertBool" />

    <converters:CertainNumberToVisible x:Key="CertainNumberToVisibleConverter"
                                       Number="2" />

    <converters:BoolToObjectConverter x:Key="BoolToNotificationColor"
                                      TrueValue="{StaticResource SurfaceBrush}"
                                      FalseValue="{StaticResource OnSurfaceLowBrush}" />
</ResourceDictionary>
