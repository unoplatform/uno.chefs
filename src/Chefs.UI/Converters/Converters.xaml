<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Chefs.Converters">
    
    <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
    <converters:EnumBooleanConverter x:Key="EnumBooleanConverter" />
    <converters:BoolToIntConverter x:Key="BoolToIntConverter" />
    <converters:StringFormatter x:Key="StringFormatter" />
    <converters:StringSeparatorConverter x:Key="DotStringSeparator"
                                        Separator="∙"/>
    <converters:CustomBackgroundColorConverter x:Key="CustomBackgroundColor" />
    <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />

	<!--DR_REV: There is an implicit converter from bool to visibility, this explicit bool to visibility converters below are useless.-->
	<converters:BoolToVisibilityConverter x:Key="TrueToVisible" />
    <converters:BoolToVisibilityConverter x:Key="TrueToCollapsed"
                                          Invert="True"/>
</ResourceDictionary>
