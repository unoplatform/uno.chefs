										  VerticalScrollBarVisibility="Hidden">
								<utu:AutoLayout utu:AutoLayout.CounterAlignment="Stretch"
                                                PrimaryAxisAlignment="Center">
									<utu:AutoLayout>
										<uer:FeedView Source="{Binding Cookbooks}"
