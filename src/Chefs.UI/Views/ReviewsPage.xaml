<Flyout x:Class="Chefs.Views.ReviewsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Chefs.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uer="using:Uno.Extensions.Reactive.UI"
        xmlns:utu="using:Uno.Toolkit.UI"
        xmlns:uen="using:Uno.Extensions.Navigation.UI"
        mc:Ignorable="d"
        Placement="Full">

    <utu:AutoLayout>
        <utu:AutoLayout.Resources>
            <x:String x:Key="Icon_Close">F1 M 14 1.4099998474121094 L 12.59000015258789 0 L 7 5.590000152587891 L 1.4099998474121094 0 L 0 1.4099998474121094 L 5.590000152587891 7 L 0 12.59000015258789 L 1.4099998474121094 14 L 7 8.40999984741211 L 12.59000015258789 14 L 14 12.59000015258789 L 8.40999984741211 7 L 14 1.4099998474121094 Z</x:String>
        </utu:AutoLayout.Resources>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow" />
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ResetButton.Style"
                                Value="{StaticResource OutlinedButtonStyle}" />
                        <Setter Target="ResetButton.Foreground"
                                Value="{ThemeResource OnSurfaceMediumBrush}" />
                        <Setter Target="MainLayout.CornerRadius"
                                Value="40,0,0,40" />
                        <Setter Target="MainLayout.Padding"
                                Value="20,40" />
                        <Setter Target="MainLayout.CornerRadius"
                                Value="40,0,0,40" />
                        <Setter Target="MainLayout.Width"
                                Value="520" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <utu:AutoLayout Background="{ThemeResource BackgroundBrush}"
                        x:Name="MainLayout"
                        utu:AutoLayout.PrimaryAlignment="Stretch">
            <utu:AutoLayout utu:AutoLayout.PrimaryAlignment="Stretch">
                <!--<utu:NavigationBar Content="Reviews"
                               Style="{StaticResource NavigationBarStyle}"
                               Background="{ThemeResource SurfaceBrush}" />-->
                <!--<utu:NavigationBar Content="Reviews"
                               Style="{StaticResource ModalNavigationBarStyle}">
                <utu:NavigationBar.MainCommand>
                    <AppBarButton Label=""
                                  Foreground="Transparent"
                                  IsEnabled="False" />
                </utu:NavigationBar.MainCommand>
                <utu:NavigationBar.PrimaryCommands>
                    <AppBarButton Command="{Binding Exit}">
                        <AppBarButton.Icon>
                            <BitmapIcon ShowAsMonochrome="False"
                                        UriSource="ms-appx:///Assets/Icons/close.png" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </utu:NavigationBar.PrimaryCommands>
            </utu:NavigationBar>-->
                <!--Workaround until AppBarButton bug gets fixed-->
                <utu:AutoLayout Spacing="10"
                                Margin="18"
                                Orientation="Horizontal">
                    <TextBlock Foreground="{ThemeResource SurfaceInverseBrush}"
                               TextWrapping="Wrap"
                               Text="Notifications"
                               utu:AutoLayout.CounterAlignment="Center"
                               utu:AutoLayout.PrimaryAlignment="Stretch"
                               Style="{StaticResource HeadlineMedium}" />
                    <Button utu:AutoLayout.CounterAlignment="End"
                            Style="{StaticResource IconButtonStyle}"
                            uen:Navigation.Request="-">
                        <PathIcon Data="{StaticResource Icon_Close}" />
                    </Button>
                </utu:AutoLayout>
                <ScrollViewer utu:AutoLayout.PrimaryAlignment="Stretch"
                              HorizontalScrollMode="Disabled">
                    <utu:AutoLayout Padding="18">
                        <uer:FeedView x:Name="IngredientsFeed"
                                      Source="{Binding Reviews}">
                            <DataTemplate>
                                <ListView ItemsSource="{Binding Data}"
                                          Style="{StaticResource ListViewStyle}"
                                          ItemTemplate="{StaticResource ReviewDataTemplate}" />
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                </ScrollViewer>
                </utu:AutoLayout>
                <utu:AutoLayout Spacing="8"
                                Padding="18,24"
                                PrimaryAxisAlignment="Center"
                                Orientation="Horizontal">
                    <TextBox Background="{ThemeResource SurfaceBrush}"
                             PlaceholderForeground="{ThemeResource OnSurfaceMediumBrush}"
                             PlaceholderText="Write a comment"
                             utu:AutoLayout.PrimaryAlignment="Stretch"
                             Style="{StaticResource OutlinedTextBoxStyle}"
                             Text="{Binding Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Background="{ThemeResource PrimaryBrush}"
                            Content="Send"
                            utu:AutoLayout.CounterAlignment="Center"
                            utu:AutoLayout.CounterLength="56"
                            Command="{Binding AddReview}" />
                </utu:AutoLayout>
        </utu:AutoLayout>
    </utu:AutoLayout>

</Flyout>
