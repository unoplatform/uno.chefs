                            </Border>
                        </utu:AutoLayout>

                        <utu:AutoLayout utu:AutoLayout.CounterAlignment="Start"
                                        utu:AutoLayout.PrimaryAlignment="Stretch">
                            <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                       Text="{Binding UserProfile.FullName}"
                                       utu:AutoLayout.CounterAlignment="Start"
                                       Style="{StaticResource CustomTitleMedium}" />
                            <TextBlock Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       Text="{Binding UserProfile.Email}"
                                       utu:AutoLayout.CounterAlignment="Start"
                                       Style="{StaticResource CustomCaptionMedium}" />
                        </utu:AutoLayout>
                    </utu:AutoLayout>

                    <utu:AutoLayout Spacing="8"
                                    Orientation="Horizontal">
                        <Button utu:AutoLayout.CounterAlignment="Center"
                                Style="{StaticResource IconButtonStyle}"
                                uen:Navigation.Request="Search">
                            <PathIcon Data="{StaticResource Icon_Outline_Interface_Search}"
                                      Foreground="{ThemeResource OnSurfaceBrush}" />
                        </Button>
                        <Button utu:AutoLayout.CounterAlignment="Center"
                                Style="{StaticResource IconButtonStyle}"
                                uen:Navigation.Request="!Notifications">
                            <PathIcon Data="{StaticResource Icon_Outline_Alert_ChefsApp}"
                                      Foreground="{ThemeResource OnSurfaceBrush}" />
                        </Button>
                    </utu:AutoLayout>
                </utu:AutoLayout>
            </utu:AutoLayout>

            <ScrollViewer utu:AutoLayout.PrimaryAlignment="Stretch"
                          HorizontalScrollMode="Disabled">
                <utu:AutoLayout x:Name="ContentLayout"
                                Spacing="30"
                                Padding="18,20">
                    <utu:AutoLayout Spacing="20">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock x:Name="TrendingNowTitle"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Trending now"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource CustomTitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAll}"
                                    Padding="0">
                                <TextBlock x:Name="TrendingNowShowAll"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource CustomTitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="TrendingNowFeed"
                                      Source="{Binding TrendingNow}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        uen:Navigation.Request="RecipeDetails"
                                                        ItemTemplate="{StaticResource HomeLargeItemTemplate}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="20"
                                    utu:AutoLayout.CounterAlignment="Start">
                        <TextBlock x:Name="CategoriesTitle"
                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                   Text="Categories"
                                   Style="{StaticResource CustomTitleLarge}" />
                        <uer:FeedView x:Name="CategoriesFeedView"
                                      Source="{Binding Categories}">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        utu:CommandExtensions.Command="{Binding DataContext.CategorySearch, ElementName=CategoriesFeedView}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal"
                                                              Spacing="8" />
                                        </muxc:ItemsRepeater.Layout>
                                        <muxc:ItemsRepeater.ItemTemplate>
                                            <DataTemplate>
                                                <utu:AutoLayout Background="{Binding Color}"
                                                                Spacing="6"
                                                                Padding="12"
                                                                CornerRadius="12"
                                                                PrimaryAxisAlignment="Center"
                                                                Orientation="Horizontal"
                                                                utu:AutoLayout.CounterAlignment="Start">
                                                    <ImageIcon Source="{Binding UrlIcon}"
                                                               utu:AutoLayout.CounterAlignment="Center"
                                                               Margin="0, 0, 0, 3" />
                                                    <TextBlock Foreground="{ThemeResource SurfaceBrush}"
                                                               Text="{Binding Name}"
                                                               utu:AutoLayout.CounterAlignment="Center"
                                                               Style="{StaticResource CustomLabelLarge}" />
                                                </utu:AutoLayout>
                                            </DataTemplate>
                                        </muxc:ItemsRepeater.ItemTemplate>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>

                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="20">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock x:Name="RecentlyAddedTitle"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Recently Added"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource CustomTitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAllRecentlyAdded}"
                                    Padding="0">
                                <TextBlock x:Name="RecentlyAddedShowAll"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource CustomTitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="RecentlyAddedFeedView"
                                      Source="{Binding RecentlyAdded}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        uen:Navigation.Request="!RecipeDetails">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                        <muxc:ItemsRepeater.ItemTemplate>
                                            <DataTemplate>
                                                <utu:AutoLayout>
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup>
                                                            <VisualState x:Name="Narrow" />
                                                            <VisualState x:Name="Wide">
                                                                <VisualState.StateTriggers>
                                                                    <AdaptiveTrigger MinWindowWidth="800" />
                                                                </VisualState.StateTriggers>
                                                                <VisualState.Setters>
                                                                    <Setter Target="RecentlyAddedTemplateCard.Margin"
                                                                            Value="40,0,0,0" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <utu:CardContentControl x:Name="RecentlyAddedTemplateCard"
                                                                            utu:AutoLayout.CounterAlignment="Start"
                                                                            Style="{StaticResource FilledCardContentControlStyle}"
                                                                            Background="{ThemeResource SurfaceBrush}"
                                                                            Margin="18, 0, 0, 0"
                                                                            MaxWidth="171">
                                                        <utu:CardContentControl.ContentTemplate>
                                                            <DataTemplate>
                                                                <utu:AutoLayout Background="{ThemeResource SurfaceBrush}"
                                                                                CornerRadius="12">
                                                                    <Image Source="{Binding ImageUrl}"
                                                                           Stretch="UniformToFill"
                                                                           utu:AutoLayout.PrimaryLength="150" />
                                                                    <utu:AutoLayout Spacing="2"
                                                                                    Padding="11, 10"
                                                                                    PrimaryAxisAlignment="Center">
                                                                        <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                                                                   TextWrapping="NoWrap"
                                                                                   Text="{Binding Name}"
                                                                                   Style="{StaticResource CustomTitleMedium}" />
                                                                        <TextBlock Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                                                   TextWrapping="NoWrap"
                                                                                   Text="{Binding TimeCal}"
                                                                                   Style="{StaticResource CustomBodySmall}" />
                                                                    </utu:AutoLayout>
                                                                </utu:AutoLayout>
                                                            </DataTemplate>
                                                        </utu:CardContentControl.ContentTemplate>
                                                    </utu:CardContentControl>
                                                </utu:AutoLayout>
                                            </DataTemplate>
                                        </muxc:ItemsRepeater.ItemTemplate>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="20">
                        <TextBlock x:Name="PopularCreatorsTitle"
                                   Foreground="{ThemeResource OnSurfaceBrush}"
                                   Text="Popular Creators"
                                   Style="{StaticResource CustomTitleLarge}" />
                        <uer:FeedView x:Name="PopularCreatorsFeedView"
                                      Source="{Binding PopularCreators}">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        uen:Navigation.Request="!Profile">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal"
                                                              Spacing="8" />
                                        </muxc:ItemsRepeater.Layout>
                                        <muxc:ItemsRepeater.ItemTemplate>
                                            <DataTemplate>
                                                <utu:AutoLayout Spacing="8"
                                                                utu:AutoLayout.CounterAlignment="Start">
                                                    <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroup>
                                                            <VisualState x:Name="Narrow" />
                                                            <VisualState x:Name="Wide">
                                                                <VisualState.StateTriggers>
                                                                    <AdaptiveTrigger MinWindowWidth="800" />
                                                                </VisualState.StateTriggers>
                                                                <VisualState.Setters>
                                                                    <Setter Target="CreatorsLayout.Height"
                                                                            Value="124" />
                                                                    <Setter Target="CreatorsLayout.Width"
                                                                            Value="124" />
                                                                    <Setter Target="CreatorsLayout.Margin"
                                                                            Value="40,0,0,0" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                        </VisualStateGroup>
                                                    </VisualStateManager.VisualStateGroups>
                                                    <utu:AutoLayout x:Name="CreatorsLayout"
                                                                    CornerRadius="30"
                                                                    Orientation="Horizontal"
                                                                    utu:AutoLayout.CounterAlignment="Center"
                                                                    Height="75"
                                                                    Width="75">
                                                        <Border CornerRadius="25"
                                                                utu:AutoLayout.PrimaryAlignment="Stretch">
                                                            <Image Source="{Binding UrlProfileImage}"
                                                                   Stretch="UniformToFill" />
                                                        </Border>
                                                    </utu:AutoLayout>
                                                    <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                                               TextAlignment="Center"
                                                               Text="{Binding FullName}"
                                                               utu:AutoLayout.CounterAlignment="Center"
                                                               Style="{StaticResource CustomBodySmall}" />
                                                </utu:AutoLayout>
                                            </DataTemplate>
                                        </muxc:ItemsRepeater.ItemTemplate>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="20">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock x:Name="LunchTitle"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Lunch"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource CustomTitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAllLunch}"
                                    Padding="0">
                                <TextBlock x:Name="LunchShowAll"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource CustomTitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="LunchRecipesFeedView"
                                      Source="{Binding LunchRecipes}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        ItemTemplate="{StaticResource HomeLargeItemTemplate}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="20">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock x:Name="DinnerTitle"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Dinner"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource CustomTitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAllDinner}"
                                    Padding="0">
                                <TextBlock x:Name="DinnerShowAll"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource CustomTitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="DinnerRecipesFeedView"
                                      Source="{Binding DinnerRecipes}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        ItemTemplate="{StaticResource HomeLargeItemTemplate}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="20">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock x:Name="SnackTitle"
                                           Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Snack"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource CustomTitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAllSnack}"
                                    Padding="0">
                                <TextBlock x:Name="SnackShowAll"
                                           Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource CustomTitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="SnackRecipesFeedView"
                                      Source="{Binding SnackRecipes}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        ItemTemplate="{StaticResource HomeLargeItemTemplate}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                </utu:AutoLayout>
            </ScrollViewer>
        </utu:AutoLayout>
    </utu:AutoLayout>
</Page>