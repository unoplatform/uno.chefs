            <DataTemplate
                x:Key="HomeLargeItemTemplate">
                <utu:CardContentControl utu:AutoLayout.CounterAlignment="Start"
                                        Style="{StaticResource FilledCardContentControlStyle}"
                                        Margin="18,0,0,0"
                                        MaxWidth="320">
                    <utu:CardContentControl.ContentTemplate>
                        <DataTemplate>
                            <utu:AutoLayout Background="{ThemeResource SurfaceBrush}">
                                <Image Source="{Binding ImageUrl}"
                                       Stretch="UniformToFill"
                                       MaxHeight="144" />
                                <utu:AutoLayout Spacing="16"
                                                Padding="16"
                                                Orientation="Horizontal">
                                    <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                                    utu:AutoLayout.PrimaryAlignment="Stretch">
                                        <utu:AutoLayout PrimaryAxisAlignment="Center">
                                            <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                                       TextWrapping="Wrap"
                                                       Text="{Binding Name}"
                                                       Style="{StaticResource TitleMedium}" />
                                            <TextBlock Foreground="{ThemeResource OnSurfaceMediumBrush}"
                                                       TextWrapping="Wrap"
                                                       Text="{Binding TimeCal}" />
                                        </utu:AutoLayout>
                                    </utu:AutoLayout>
                                    <Button utu:AutoLayout.CounterAlignment="Center"
                                            Style="{StaticResource IconButtonStyle}"
                                            Command="{Binding DataContext.SaveRecipe, ElementName=TrendingNowFeed}"
                                            CommandParameter="{Binding}">
                                        <PathIcon Data="{StaticResource Icon_Outline_Status_Bookmark}"
                                                  Foreground="{ThemeResource OnBackgroundBrush}" />
                                    </Button>
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </DataTemplate>
                    </utu:CardContentControl.ContentTemplate>
                </utu:CardContentControl>
            </DataTemplate>
        </utu:AutoLayout.Resources>
        <utu:AutoLayout
                        utu:AutoLayout.PrimaryAlignment="Stretch">
            <uer:FeedView x:Name="UserFeedView"
                          Source="{Binding UserProfile}">
                <DataTemplate>
                    <utu:AutoLayout Spacing="8"
                                    Padding="18,12"
                                    Orientation="Horizontal">
                        <utu:AutoLayout CornerRadius="30"
                                        Orientation="Horizontal"
                                        utu:AutoLayout.CounterAlignment="Center"
                                        utu:AutoLayout.PrimaryLength="40"
                                        utu:AutoLayout.CounterLength="40"
                                        uen:Navigation.Request="!Profile"
                                        uen:Navigation.Data="{Binding Data}">
                            <Border CornerRadius="15"
                                    utu:AutoLayout.PrimaryAlignment="Stretch">
                                <Image Source="{Binding Data.UrlProfileImage}"
                                       Stretch="UniformToFill" />
                            </Border>
                        </utu:AutoLayout>

                        <utu:AutoLayout utu:AutoLayout.CounterAlignment="Start"
                                        utu:AutoLayout.PrimaryAlignment="Stretch">
                            <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                       Text="{Binding Data.FullName}"
                                       utu:AutoLayout.CounterAlignment="Start"
                                       Style="{StaticResource TitleMedium}" />
                            <TextBlock Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                       Text="{Binding Data.Email}"
                                       utu:AutoLayout.CounterAlignment="Start"
                                       Style="{StaticResource CaptionMedium}" />
                        </utu:AutoLayout>
                        <Button utu:AutoLayout.CounterAlignment="Start"
                                Style="{StaticResource IconButtonStyle}"
                                uen:Navigation.Request="Search">
                            <PathIcon Data="{StaticResource Icon_Outline_Interface_Search}"
                                      Foreground="{ThemeResource OnSurfaceBrush}" />
                        </Button>
                    </utu:AutoLayout>
                </DataTemplate>
            </uer:FeedView>
            <ScrollViewer utu:AutoLayout.PrimaryAlignment="Stretch"
                          HorizontalScrollMode="Disabled">
                <utu:AutoLayout Spacing="38"
                                Padding="18,20">
                    <utu:AutoLayout Spacing="24">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Stretch"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Trending now"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource TitleLarge}" />
                            </utu:AutoLayout>
                            <Button Command="{Binding ShowAll}"
                                    Background="Transparent"
                                    Padding="0">
                                <TextBlock Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource TitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <Grid>
                            <uer:FeedView x:Name="TrendingNowFeed"
                                          Source="{Binding TrendingNow}"
                                          Margin="-18,0">
                                <DataTemplate>
                                    <ScrollViewer HorizontalScrollMode="Enabled"
                                                  HorizontalScrollBarVisibility="Hidden">
                                        <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                            uen:Navigation.Request="!RecipeDetails"
                                                            ItemTemplate="{StaticResource HomeLargeItemTemplate}">
                                            <muxc:ItemsRepeater.Layout>
                                                <muxc:StackLayout Orientation="Horizontal" />
                                            </muxc:ItemsRepeater.Layout>
                                        </muxc:ItemsRepeater>
                                    </ScrollViewer>
                                </DataTemplate>
                            </uer:FeedView>
                        </Grid>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="24"
                                    utu:AutoLayout.CounterAlignment="Start">
                        <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                   Text="Categories"
                                   Style="{StaticResource TitleLarge}" />
                        <uer:FeedView x:Name="CategoriesFeedView"
                                      Source="{Binding Categories}">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        utu:CommandExtensions.Command="{Binding DataContext.CategorySearch, ElementName=CategoriesFeedView}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal"
                                                              Spacing="8" />
                                        </muxc:ItemsRepeater.Layout>
                                        <muxc:ItemsRepeater.ItemTemplate>
                                            <DataTemplate>
                                                <utu:AutoLayout Background="{Binding Color}"
                                                                Spacing="6"
                                                                Padding="12"
                                                                CornerRadius="12"
                                                                PrimaryAxisAlignment="Center"
                                                                Orientation="Horizontal"
                                                                utu:AutoLayout.CounterAlignment="Start">
                                                    <ImageIcon Source="{Binding UrlIcon}"
                                                               utu:AutoLayout.CounterAlignment="Center"
                                                               Margin="0, 0, 0, 3" />
                                                    <TextBlock Foreground="{ThemeResource SurfaceBrush}"
                                                               Text="{Binding Name}"
                                                               utu:AutoLayout.CounterAlignment="Center"
                                                               Style="{StaticResource LabelLarge}" />
                                                </utu:AutoLayout>
                                            </DataTemplate>
                                        </muxc:ItemsRepeater.ItemTemplate>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>

                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="24">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Recently Added"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource TitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAllRecentlyAdded}"
                                    Padding="0">
                                <TextBlock Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource TitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="RecentlyAddedFeedView"
                                      Source="{Binding RecentlyAdded}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        uen:Navigation.Request="!RecipeDetails"
                                                        ItemTemplate="{StaticResource HomeLargeItemTemplate}"
                                                        >
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>

                    <utu:AutoLayout Spacing="24">
                        <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                   Text="Popular Creators"
                                   Style="{StaticResource TitleLarge}" />
                        <uer:FeedView x:Name="PopularCreatorsFeedView"
                                      Source="{Binding PopularCreators}">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal"
                                                              Spacing="8" />
                                        </muxc:ItemsRepeater.Layout>
                                        <muxc:ItemsRepeater.ItemTemplate>
                                            <DataTemplate>
                                                <utu:AutoLayout Spacing="8"
                                                                utu:AutoLayout.CounterAlignment="Start"
                                                                uen:Navigation.Request="Profile"
                                                                uen:Navigation.Data="{Binding}">
                                                    <utu:AutoLayout CornerRadius="30"
                                                                    Orientation="Horizontal"
                                                                    utu:AutoLayout.CounterAlignment="Center"
                                                                    utu:AutoLayout.PrimaryLength="75"
                                                                    utu:AutoLayout.CounterLength="75">
                                                        <Border CornerRadius="25"
                                                                utu:AutoLayout.PrimaryAlignment="Stretch">
                                                            <Image Source="{Binding UrlProfileImage}"
                                                                   Stretch="UniformToFill" />
                                                        </Border>
                                                    </utu:AutoLayout>
                                                    <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                                               TextAlignment="Center"
                                                               Text="{Binding FullName}"
                                                               utu:AutoLayout.CounterAlignment="Center"
                                                               Style="{StaticResource BodySmall}" />
                                                </utu:AutoLayout>
                                            </DataTemplate>
                                        </muxc:ItemsRepeater.ItemTemplate>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="24">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Lunch"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource TitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAllLunch}"
                                    Padding="0">
                                <TextBlock Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource TitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="LunchRecipesFeedView"
                                      Source="{Binding LunchRecipes}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        ItemTemplate="{StaticResource HomeLargeItemTemplate}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="24">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Dinner"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource TitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAllDinner}"
                                    Padding="0">
                                <TextBlock Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource TitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="DinnerRecipesFeedView"
                                      Source="{Binding DinnerRecipes}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        ItemTemplate="{StaticResource HomeLargeItemTemplate}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                    <utu:AutoLayout Spacing="24">
                        <utu:AutoLayout Spacing="8"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal">
                            <utu:AutoLayout utu:AutoLayout.CounterAlignment="Center"
                                            utu:AutoLayout.PrimaryAlignment="Stretch">
                                <TextBlock Foreground="{ThemeResource OnSurfaceBrush}"
                                           Text="Snack"
                                           utu:AutoLayout.CounterAlignment="Start"
                                           Style="{StaticResource TitleLarge}" />
                            </utu:AutoLayout>
                            <Button Background="Transparent"
                                    Command="{Binding ShowAllSnack}"
                                    Padding="0">
                                <TextBlock Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                           TextAlignment="End"
                                           TextWrapping="Wrap"
                                           Text="Show me all"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           utu:AutoLayout.PrimaryAlignment="Stretch"
                                           Style="{StaticResource TitleSmall}" />
                            </Button>
                        </utu:AutoLayout>
                        <uer:FeedView x:Name="SnackRecipesFeedView"
                                      Source="{Binding SnackRecipes}"
                                      Margin="-18,0">
                            <DataTemplate>
                                <ScrollViewer HorizontalScrollMode="Enabled"
                                              HorizontalScrollBarVisibility="Hidden">
                                    <muxc:ItemsRepeater ItemsSource="{Binding Data}"
                                                        ItemTemplate="{StaticResource HomeLargeItemTemplate}">
                                        <muxc:ItemsRepeater.Layout>
                                            <muxc:StackLayout Orientation="Horizontal" />
                                        </muxc:ItemsRepeater.Layout>
                                    </muxc:ItemsRepeater>
                                </ScrollViewer>
                            </DataTemplate>
                        </uer:FeedView>
                    </utu:AutoLayout>
                </utu:AutoLayout>
            </ScrollViewer>
