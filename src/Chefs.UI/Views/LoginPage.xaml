        <utu:AutoLayout utu:AutoLayout.PrimaryAlignment="Stretch">
            <utu:AutoLayout PrimaryAxisAlignment="Center" utu:AutoLayout.PrimaryLength="150">
                <Image Source="https://picsum.photos/390/150" Stretch="UniformToFill" utu:AutoLayout.PrimaryAlignment="Stretch" />
            </utu:AutoLayout>
            <utu:AutoLayout Spacing="20" Padding="30,30,30,10" CornerRadius="40,40,0,0" PrimaryAxisAlignment="End" utu:AutoLayout.PrimaryAlignment="Stretch">
                <Image Source="https://picsum.photos/189/57" Stretch="UniformToFill" utu:AutoLayout.CounterAlignment="Center" utu:AutoLayout.PrimaryLength="57.5" utu:AutoLayout.CounterLength="189" />
                <utu:AutoLayout Spacing="14" PrimaryAxisAlignment="Center">
                    <TextBox PlaceholderForeground="{ThemeResource OnSurfaceVariantBrush}" PlaceholderText="Full name" Style="{StaticResource OutlinedTextBoxStyle}">
                        <um:ControlExtensions.Icon>
                            <PathIcon Data="{StaticResource Icon_Outline_Person_ChefApp}" Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        </um:ControlExtensions.Icon>
                    </TextBox>
                    <TextBox PlaceholderForeground="{ThemeResource OnSurfaceVariantBrush}" PlaceholderText="Email" Style="{StaticResource OutlinedTextBoxStyle}">
                        <um:ControlExtensions.Icon>
                            <PathIcon Data="{StaticResource Icon_Outline_Email_ChefApp}" Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                        </um:ControlExtensions.Icon>
                    </TextBox>
                    <PasswordBox PlaceholderText="Password" Style="{StaticResource OutlinedPasswordBoxStyle}" />
                    <utu:AutoLayout Spacing="24" PrimaryAxisAlignment="Center" Orientation="Horizontal">
                        <CheckBox Content="Remember me" utu:AutoLayout.CounterAlignment="Center" utu:AutoLayout.PrimaryAlignment="Stretch" />
                        <TextBlock Foreground="{ThemeResource PrimaryBrush}" Text="Forgot password?" utu:AutoLayout.CounterAlignment="Center" Style="{StaticResource LabelLarge}" />
                    </utu:AutoLayout>
                </utu:AutoLayout>
                <Button Background="{ThemeResource PrimaryBrush}" Content="Sign in" utu:AutoLayout.PrimaryLength="56" />
                <utu:AutoLayout Spacing="5" PrimaryAxisAlignment="Center" Orientation="Horizontal" utu:AutoLayout.PrimaryAlignment="Stretch">
                    <utu:AutoLayout PrimaryAxisAlignment="End" Orientation="Horizontal" utu:AutoLayout.CounterAlignment="End" utu:AutoLayout.PrimaryAlignment="Stretch">
                        <TextBlock Foreground="{ThemeResource OnBackgroundMediumBrush}" TextAlignment="Center" Text="Already a user?" utu:AutoLayout.CounterAlignment="Center" Style="{StaticResource LabelMedium}" />
                    </utu:AutoLayout>
                    <HyperlinkButton Content="Login Now" utu:AutoLayout.CounterAlignment="End" utu:AutoLayout.PrimaryAlignment="Stretch" />
                </utu:AutoLayout>
            </utu:AutoLayout>
        </utu:AutoLayout>
