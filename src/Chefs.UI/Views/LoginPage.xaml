                            <utu:AutoLayout x:Name="RegisterLayout"
                                            PrimaryAxisAlignment="Start"
                                            Spacing="15"
                                            Visibility="{Binding IsRegisterToggle}">
                                <Image Source="ms-appx:///Assets/Icons/uno_logo.png"
                                       Stretch="Uniform"
                                       Height="44"
                                       Width="200"
                                       Margin="0, 0, 0, 15" />
                                <utu:AutoLayout x:Name="RegisterFieldsButtonsLayout"
                                                Spacing="10"
                                                utu:AutoLayout.CounterAlignment="Stretch"
                                                PrimaryAxisAlignment="Start">
                                    <TextBox PlaceholderText="Full name"
                                             PlaceholderForeground="{ThemeResource OnSurfaceVariantBrush}"
                                             CornerRadius="16"
                                             Style="{StaticResource OutlinedTextBoxStyle}"
                                             utu:InputExtensions.AutoFocusNextElement="{Binding ElementName=NarrowEmail}"
                                             ios:ReturnKeyType="Next"
                                             android:ImeOptions="Next"
                                             IsSpellCheckEnabled="False"
                                             InputScope="Text">
                                        <um:ControlExtensions.Icon>
                                            <PathIcon Data="{StaticResource Icon_Outline_Person_ChefApp}"
                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                        </um:ControlExtensions.Icon>
                                    </TextBox>
                                    <TextBox PlaceholderText="Email"
                                             x:Name="NarrowEmail"
                                             PlaceholderForeground="{ThemeResource OnSurfaceVariantBrush}"
                                             CornerRadius="16"
                                             Style="{StaticResource OutlinedTextBoxStyle}"
                                             utu:InputExtensions.AutoFocusNextElement="{Binding ElementName=NarrowRegisterPassword}"
                                             ios:ReturnKeyType="Next"
                                             android:ImeOptions="Next"
                                             IsSpellCheckEnabled="False"
                                             InputScope="Text">
                                        <um:ControlExtensions.Icon>
                                            <PathIcon Data="{StaticResource Icon_Outline_Email_ChefApp}"
                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                        </um:ControlExtensions.Icon>
                                    </TextBox>
                                    <PasswordBox PlaceholderText="Password"
                                                 x:Name="NarrowRegisterPassword"
                                                 CornerRadius="16"
                                                 Style="{StaticResource OutlinedPasswordBoxStyle}"
                                                 utu:CommandExtensions.Command="{Binding ToggleRegister}"
                                                 ios:ReturnKeyType="Done"
                                                 android:ImeOptions="Done">
                                        <um:ControlExtensions.Icon>
                                            <PathIcon Data="{StaticResource Icon_Outline_Password_ChefApp}"
                                                      Foreground="{ThemeResource OnSurfaceMediumBrush}" />
                                        </um:ControlExtensions.Icon>
                                    </PasswordBox>
                                </utu:AutoLayout>
                                <Button Command="{Binding ToggleRegister}"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Background="{ThemeResource PrimaryBrush}"
                                        Content="Sign in"
                                        Height="56" />

                                <utu:AutoLayout Spacing="5"
                                                Orientation="Horizontal"
                                                utu:AutoLayout.CounterAlignment="Center">
                                    <TextBlock Foreground="{ThemeResource OnSurfaceMediumBrush}"
                                               TextAlignment="Center"
                                               Text="Already a user?"
                                               Style="{StaticResource LabelMedium}" />
                                    <HyperlinkButton Command="{Binding ToggleRegister}"
                                                     Content="Login Now" />
                                </utu:AutoLayout>
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                </ScrollViewer>

                <Border x:Name="WideChefImage"
                        Visibility="Collapsed"
                        utu:AutoLayout.PrimaryAlignment="Stretch"
                        utu:AutoLayout.CounterAlignment="Stretch">
                    <Image Source="ms-appx:///Assets/Welcome/first_splash_screen.png"
                           Stretch="UniformToFill"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
                </Border>
                <utu:AutoLayout x:Name="WideInnerLayout"
                                Background="{ThemeResource SurfaceBrush}"
                                utu:AutoLayout.CounterAlignment="Stretch"
                                utu:AutoLayout.IsIndependentLayout="True"
                                PrimaryAxisAlignment="Center"
                                HorizontalAlignment="Left"
                                CornerRadius="40"
                                Padding="66"
                                Margin="50,-40,0,-40"
                                Height="700"
                                Visibility="Collapsed">
                    <utu:AutoLayout x:Name="WideLoginLayout"
                                    Spacing="40"
                                    Visibility="{Binding IsRegisterToggle, Converter={StaticResource InvertBool}}">
                        <Image Source="ms-appx:///Assets/Icons/uno_logo.png"
                               Stretch="Uniform"
                               Height="44"
                               Width="200" />
                        <utu:AutoLayout Spacing="20"
                                        utu:AutoLayout.CounterAlignment="Stretch"
                                        PrimaryAxisAlignment="Start">
                            <TextBox Text="{Binding Credentials.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     PlaceholderText="Email"
                                     PlaceholderForeground="{ThemeResource OnSurfaceVariantBrush}"
                                     CornerRadius="16"
                                     utu:InputExtensions.AutoFocusNextElement="{Binding ElementName=WideLoginPassword}"
                                     ios:ReturnKeyType="Next"
                                     android:ImeOptions="Next"
                                     IsSpellCheckEnabled="False"
                                     utu:AutoLayout.CounterAlignment="Stretch"
                                     HorizontalAlignment="Stretch"
                                     Style="{StaticResource OutlinedTextBoxStyle}">
                                <um:ControlExtensions.Icon>
                                    <PathIcon Data="{StaticResource Icon_Outline_Email_ChefApp}"
                                              Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                </um:ControlExtensions.Icon>
                            </TextBox>
                            <PasswordBox Password="{Binding Credentials.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         x:Name="WideLoginPassword"
                                         PlaceholderText="Password"
                                         ios:ReturnKeyType="Done"
                                         android:ImeOptions="Done"
                                         utu:CommandExtensions.Command="{Binding Login}"
                                         CornerRadius="16"
                                         Style="{StaticResource OutlinedPasswordBoxStyle}">
                                <um:ControlExtensions.Icon>
                                    <PathIcon Data="{StaticResource Icon_Outline_Password_ChefApp}"
                                              Foreground="{ThemeResource OnSurfaceMediumBrush}" />
                                </um:ControlExtensions.Icon>
                            </PasswordBox>
                            <utu:AutoLayout Spacing="158"
                                            PrimaryAxisAlignment="Center"
                                            utu:AutoLayout.CounterAlignment="Stretch"
                                            utu:AutoLayout.PrimaryAlignment="Stretch"
                                            Orientation="Horizontal">
                                <CheckBox Content="Remember me"
                                          IsChecked="{Binding Credentials.SaveCredentials, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Foreground="{ThemeResource OnSurfaceMediumBrush}"
                                          BorderBrush="{ThemeResource OnSurfaceMediumBrush}"
                                          utu:AutoLayout.CounterAlignment="Center"
                                          utu:AutoLayout.PrimaryAlignment="Stretch" />
                                <TextBlock Text="Forgot password?"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           Foreground="{ThemeResource PrimaryBrush}"
                                           Style="{StaticResource LabelLarge}" />
                            </utu:AutoLayout>

                            <Button Command="{Binding Login}"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="{ThemeResource PrimaryBrush}"
                                    Content="Sign in"
                                    Height="56" />
                            <utu:Divider Style="{StaticResource DividerStyle}" />
                            <Button HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="#E2E8F0"
                                    Content="Sign in with Apple"
                                    Height="56"
                                    Foreground="{ThemeResource OnSurfaceMediumBrush}"
                                    Style="{StaticResource FilledTonalButtonStyle}">
                                <um:ControlExtensions.Icon>
                                    <PathIcon Data="{StaticResource Icon_Solid_Apple_ChefsApp}"
                                              Foreground="{ThemeResource OnSurfaceMediumBrush}" />
                                </um:ControlExtensions.Icon>
                            </Button>
                            <Button HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="#E2E8F0"
                                    Content="Sign in with Google"
                                    Height="56"
                                    Foreground="{ThemeResource OnSurfaceMediumBrush}"
                                    Style="{StaticResource FilledTonalButtonStyle}">
                                <um:ControlExtensions.Icon>
                                    <PathIcon Data="{StaticResource Icon_Solid_Google_ChefsApp}"
                                              Foreground="{ThemeResource OnSurfaceMediumBrush}" />
                                </um:ControlExtensions.Icon>
                            </Button>
                        </utu:AutoLayout>
                        <utu:AutoLayout Orientation="Vertical"
                                        utu:AutoLayout.CounterAlignment="Stretch"
                                        PrimaryAxisAlignment="Start">
                            <utu:AutoLayout PrimaryAxisAlignment="Center"
                                            Orientation="Horizontal"
                                            utu:AutoLayout.CounterAlignment="Center"
                                            Spacing="5">
                                <utu:AutoLayout PrimaryAxisAlignment="Center"
                                                utu:AutoLayout.CounterAlignment="Center">
                                    <TextBlock Foreground="{ThemeResource OnSurfaceMediumBrush}"
                                               TextAlignment="Center"
                                               Text="Not a member?"
                                               Style="{StaticResource LabelMedium}" />
                                </utu:AutoLayout>

                                <HyperlinkButton Command="{Binding ToggleRegister}"
                                                 Content="Register Now"
                                                 utu:AutoLayout.CounterAlignment="Center" />
                            </utu:AutoLayout>
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                    <utu:AutoLayout x:Name="WideRegisterLayout"
                                    Spacing="40"
                                    Visibility="{Binding IsRegisterToggle}">
                        <Image Source="ms-appx:///Assets/Icons/uno_logo.png"
                               Stretch="Uniform"
                               Height="57.5"
                               Width="200"
                               Margin="0, 0, 0, 30" />
                        <utu:AutoLayout Spacing="20"
                                        utu:AutoLayout.CounterAlignment="Stretch"
                                        PrimaryAxisAlignment="Start">
                            <TextBox PlaceholderText="Full name"
                                     PlaceholderForeground="{ThemeResource OnSurfaceVariantBrush}"
                                     CornerRadius="16"
                                     Style="{StaticResource OutlinedTextBoxStyle}"
                                     utu:InputExtensions.AutoFocusNextElement="{Binding ElementName=WideEmail}"
                                     ios:ReturnKeyType="Next"
                                     android:ImeOptions="Next"
                                     IsSpellCheckEnabled="False"
                                     InputScope="Text">
                                <um:ControlExtensions.Icon>
                                    <PathIcon Data="{StaticResource Icon_Outline_Person_ChefApp}"
                                              Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                </um:ControlExtensions.Icon>
                            </TextBox>
                            <TextBox PlaceholderText="Email"
                                     x:Name="WideEmail"
                                     PlaceholderForeground="{ThemeResource OnSurfaceVariantBrush}"
                                     CornerRadius="16"
                                     Style="{StaticResource OutlinedTextBoxStyle}"
                                     utu:InputExtensions.AutoFocusNextElement="{Binding ElementName=WideRegisterPassword}"
                                     ios:ReturnKeyType="Next"
                                     android:ImeOptions="Next"
                                     IsSpellCheckEnabled="False"
                                     utu:AutoLayout.CounterAlignment="Stretch"
                                     HorizontalAlignment="Stretch"
                                     InputScope="Text">
                                <um:ControlExtensions.Icon>
                                    <PathIcon Data="{StaticResource Icon_Outline_Email_ChefApp}"
                                              Foreground="{ThemeResource OnSurfaceVariantBrush}" />
                                </um:ControlExtensions.Icon>
                            </TextBox>
                            <PasswordBox PlaceholderText="Password"
                                         x:Name="WideRegisterPassword"
                                         CornerRadius="16"
                                         Style="{StaticResource OutlinedPasswordBoxStyle}"
                                         utu:CommandExtensions.Command="{Binding ToggleRegister}"
                                         ios:ReturnKeyType="Done"
                                         android:ImeOptions="Done">
                                <um:ControlExtensions.Icon>
                                    <PathIcon Data="{StaticResource Icon_Outline_Password_ChefApp}"
                                              Foreground="{ThemeResource OnSurfaceMediumBrush}" />
                                </um:ControlExtensions.Icon>
                            </PasswordBox>
                        </utu:AutoLayout>
                        <Button Command="{Binding ToggleRegister}"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="{ThemeResource PrimaryBrush}"
                                Content="Sign in"
                                MinWidth="416"
                                Height="56" />
                        <utu:AutoLayout Spacing="5"
                                        PrimaryAxisAlignment="Center"
                                        Orientation="Horizontal"
                                        utu:AutoLayout.PrimaryAlignment="Stretch">
                            <utu:AutoLayout PrimaryAxisAlignment="End"
                                            Orientation="Horizontal"
                                            utu:AutoLayout.CounterAlignment="Start">
                                <TextBlock Foreground="{ThemeResource OnSurfaceMediumBrush}"
                                           TextAlignment="Center"
                                           Text="Already a user?"
                                           utu:AutoLayout.CounterAlignment="Center"
                                           Style="{StaticResource LabelMedium}" />
                            </utu:AutoLayout>
                            <HyperlinkButton Command="{Binding ToggleRegister}"
                                             Content="Login Now"
                                             utu:AutoLayout.CounterAlignment="Start" />
                        </utu:AutoLayout>
                    </utu:AutoLayout>
                </utu:AutoLayout>
            </Grid>
        </utu:AutoLayout>
    </utu:AutoLayout>
</Page>
