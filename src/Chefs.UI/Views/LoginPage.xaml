                        <Setter Target="OuterLayout.Background"
                                Value="{ThemeResource PrimaryBrush}" />
                        <Setter Target="WideInnerLayout.Visibility"
                                Value="Visible" />
                        <Setter Target="InnerLayout.Visibility"
