                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ChefImage.Visibility"
                                Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ChefImage.Visibility"
                                Value="Collapsed" />
                        <Setter Target="WideChefImage.Visibility"
                                Value="Visible" />
                        <Setter Target="WideChefImage.(utu:AutoLayout.PrimaryAlignment)"
                                Value="Stretch" />
                        <Setter Target="WideChefImage.(utu:AutoLayout.CounterAlignment)"
                                Value="Stretch" />
                        <Setter Target="WideChefImage.Margin"
                                Value="363, 0, 0, 0" />
                        <Setter Target="OuterLayout.(utu:AutoLayout.PrimaryAlignment)"
                                Value="Stretch" />
                        <Setter Target="OuterLayout.(utu:AutoLayout.CounterAlignment)"
